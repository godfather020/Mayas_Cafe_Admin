<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="circular">
        <item name="cornerSize">20dp</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">599dp</item>
        <item name="boxCornerRadiusBottomStart">599dp</item>
        <item name="boxCornerRadiusTopEnd">599dp</item>
        <item name="boxCornerRadiusTopStart">599dp</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="fontFamily">@font/ntailu</item>
    </style>

    <style name="EditText"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/ntailu</item>
    </style>

</resources>