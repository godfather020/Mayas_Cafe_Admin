<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>
    <style name="circular">
        <item name="cornerSize">20dp</item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">599dp</item>
        <item name="boxCornerRadiusBottomStart">599dp</item>
        <item name="boxCornerRadiusTopEnd">599dp</item>
        <item name="boxCornerRadiusTopStart">599dp</item>
        <!--<item name="boxStrokeColor">@color/Screen_Background</item>-->
        <!--<item name="boxStrokeWidth">2dp</item>-->
        <item name="android:background">@drawable/custom_edit_txt</item>
        <item name="hintTextColor">@color/textColors</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="InputLayout">
        <item name="android:background">@drawable/custom_edit_txt</item>
        <item name="hintTextColor">@color/textColors</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Style_TextView">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="Style_ToolTextView">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="Style_TabText">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="EditText"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/ntailu</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_down_anim</item>
    </style>

</resources>