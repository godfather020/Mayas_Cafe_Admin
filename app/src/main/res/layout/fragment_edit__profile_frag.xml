<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Edit_Profile_frag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:fontFamily="@font/oxygen_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/upload_img"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#F9EEE4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" >

        <ImageView
            android:id="@+id/user_edit_img"
            android:layout_width="260dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/upload_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:textStyle="normal"
            android:textSize="25sp"
            android:textColor="#338E8E33"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/name_edit_card"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       app:layout_constraintTop_toBottomOf="@+id/upload_img"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="58dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       app:cardCornerRadius="50dp"
       >
       <EditText
           android:id="@+id/user_edit_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Enter your name"
           android:textSize="18sp"
           android:fontFamily="@font/ntailu"
           android:paddingStart="32dp"
           android:maxLength="30"
           android:inputType="textPersonName"
           android:layout_gravity="center"
           android:backgroundTint="@color/white"
           android:textColor="#4D000000"/>

   </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/phone_edit_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="50dp"
        >
        <EditText
            android:id="@+id/user_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Phone Number"
            android:textSize="18sp"
            android:inputType="phone"
            android:fontFamily="@font/ntailu"
            android:maxLength="13"
            android:paddingStart="32dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="#4D000000"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/user_email_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/phone_edit_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="50dp"
        >
        <EditText
            android:id="@+id/user_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Email Address"
            android:textSize="18sp"
            android:fontFamily="@font/ntailu"
            android:paddingStart="32dp"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="#4D000000"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/user_add_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/user_email_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/user_edit_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Address"
            android:textSize="18sp"
            android:fontFamily="@font/ntailu"
            android:maxLength="60"
            android:paddingStart="32dp"
            android:inputType="textMultiLine"
            android:layout_marginTop="16dp"
            android:layout_gravity="top"
            android:backgroundTint="@color/white"
            android:textColor="#4D000000"/>

    </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/save_edit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_button"
                app:layout_constraintTop_toBottomOf="@+id/user_add_card"
                android:layout_marginTop="58dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:fontFamily="@font/ntailu"
                android:textAllCaps="false"
                android:textStyle="normal" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>