<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/trans_card"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="@dimen/space_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/transImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/transName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Ramu kaka"
                android:textColor="#363853"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/transImg"
                app:layout_constraintTop_toTopOf="@+id/transImg" />

            <TextView
                android:id="@+id/transDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="27 Apr 2022"
                android:textColor="#82838B"
                android:textSize="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/transImg"
                app:layout_constraintTop_toBottomOf="@+id/transName" />

            <TextView
                android:id="@+id/transPayMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/space_5dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="By Cash"
                android:textColor="#82838B"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/transDate"
                app:layout_constraintTop_toBottomOf="@+id/transName" />

            <TextView
                android:id="@+id/transAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="$5"
                android:textColor="#363853"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/transStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Received"
                android:textColor="#12971F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transAmt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>