<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_card_border"
        app:layout_constraintBottom_toBottomOf="@+id/recent_customer_image"
        app:layout_constraintEnd_toEndOf="@+id/recent_customer_image"
        app:layout_constraintStart_toStartOf="@+id/recent_customer_image"
        app:layout_constraintTop_toTopOf="@+id/recent_customer_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recent_customer_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/avatar_1_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recent_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="OrderId : #8546984"
        android:textColor="@color/textColors"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/recent_customer_image"
        app:layout_constraintTop_toTopOf="@+id/recent_customer_image" />

    <TextView
        android:id="@+id/recent_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Ramu kaka"
        android:textColor="@color/textColors"
        android:textSize="12dp"
        android:fontFamily="@font/montserrat_medium"
        app:layout_constraintBottom_toBottomOf="@+id/recent_customer_image"
        app:layout_constraintStart_toEndOf="@+id/recent_customer_image" />

    <TextView
        android:id="@+id/recent_order_Amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="$25.6"
        android:layout_margin="20dp"
        android:textColor="@color/textColors"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_19"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16" />

</androidx.constraintlayout.widget.ConstraintLayout>