<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddNewOffer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/offer_img"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_98"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Upload Banner Image"
            android:textAlignment="center"
            android:textColor="#338E8E33"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/offer_img"
            app:layout_constraintEnd_toEndOf="@+id/offer_img"
            app:layout_constraintStart_toStartOf="@+id/offer_img"
            app:layout_constraintTop_toTopOf="@+id/offer_img" />

        <EditText
            android:id="@+id/offer_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_edit_txt"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter item name"
            android:paddingStart="16dp"
            android:textColor="@color/textColors"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_img" />

        <EditText
            android:id="@+id/offer_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edit_txt"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter title"
            android:paddingStart="16dp"
            android:textColor="@color/textColors"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_name" />

        <EditText
            android:id="@+id/offer_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edit_txt"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter Code"
            android:paddingStart="16dp"
            android:textColor="@color/textColors"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_title" />

        <EditText
            android:id="@+id/upto_discount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edit_txt"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter upto discount"
            android:paddingStart="16dp"
            android:textColor="@color/textColors"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_code" />

        <EditText
            android:id="@+id/offer_minAmt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edit_txt"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter minimum amount"
            android:paddingStart="16dp"
            android:textColor="@color/textColors"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upto_discount" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_minAmt">

            <EditText
                android:id="@+id/offer_startDate"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/custom_edit_txt"
                android:drawableEnd="@drawable/uiw_date"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Start at"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/textColors"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offer_minAmt" />

            <EditText
                android:id="@+id/offer_endDate"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/custom_edit_txt"
                android:drawableEnd="@drawable/uiw_date"
                android:fontFamily="@font/montserrat_medium"
                android:hint="End at"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/textColors"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offer_minAmt" />

        </LinearLayout>

        <EditText
            android:id="@+id/offer_des"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@drawable/custom_edit_txt2"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="start"
            android:hint="description"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textColor="@color/textColors"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="CalculateType"
        android:textColor="@color/textColors"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offer_des" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:checkedButton="@id/radio_percent"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27">

        <RadioButton
            android:id="@+id/radio_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:backgroundTint="#F9CED7"
            android:buttonTint="#E80937"
            android:fontFamily="@font/montserrat_medium"
            android:text="Percentage"
            android:textColor="@color/textColors"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/radio_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9CED7"
            android:buttonTint="#E80937"
            android:fontFamily="@font/montserrat_medium"
            android:text="Currency"
            android:textColor="@color/textColors"
            android:textSize="16dp" />

    </RadioGroup>


            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="status"
                android:textColor="@color/textColors"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:checkedButton="@id/radio_inactive"
                android:gravity="start"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28">

                <RadioButton
                    android:id="@+id/radio_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="36dp"
                    android:backgroundTint="#F9CED7"
                    android:buttonTint="#E80937"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Active"
                    android:textColor="@color/textColors"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/radio_inactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F9CED7"
                    android:buttonTint="#E80937"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Inactive"
                    android:textColor="@color/textColors"
                    android:textSize="16dp" />

            </RadioGroup>

            <Button
                android:id="@+id/addOffer_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/montserrat_medium"
                android:text="Add New Offer"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroup1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/loading_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>