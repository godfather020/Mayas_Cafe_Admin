<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:background="#FFEEF0F5"
    android:layout_height="match_parent"
    tools:context=".activities.Dashboard">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="94dp"
        android:background="@drawable/custom_nav"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu">

    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_const"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:title=""
                app:titleTextColor="#00FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/group_8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.cardview.widget.CardView
            android:id="@+id/income_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/target_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:text="$1200.00"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />


            <TextView
                android:id="@+id/target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Income"
                android:layout_gravity="end"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@+id/target_amt"
                app:layout_constraintEnd_toEndOf="parent" />

            <org.eazegraph.lib.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:egFixedBarWidth="false"
                app:egBarMargin="30dp"
                app:egEnableScroll="false"
                app:egLegendHeight="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@+id/target"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/allorders_card"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/income_card"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="25dp"
            android:layout_margin="16dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/neworders_card"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/income_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="25dp"
            android:layout_margin="16dp"
            />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/preporders_card"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toBottomOf="@+id/allorders_card"
                        app:layout_constraintStart_toStartOf="parent"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="16dp"
                        />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/deliverorders_card"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        app:layout_constraintTop_toBottomOf="@+id/neworders_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:cardCornerRadius="25dp"
                        android:layout_margin="16dp"
                        />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.drawerlayout.widget.DrawerLayout>